<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>qanda</display-name>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>faces/login.xhtml</welcome-file>
  </welcome-file-list>
  <security-constraint>
        <display-name>qanda</display-name>
        <web-resource-collection>
            <web-resource-name>qanda</web-resource-name>
            <description>qandaのリソース</description>
            <url-pattern>/faces/authed/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>ログイン認証後にリソースを利用できるロール</description>
            <role-name>admin</role-name>
            <role-name>student</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description>HTTPS接続する場合はCONFIDENTIALに変更する</description>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminOnly</web-resource-name>
            <description>adminのみがアクセス可能</description>
            <url-pattern>/faces/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description>HTTPS接続する場合はCONFIDENTIALに変更する</description>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbc-realm</realm-name>
        <form-login-config>
            <form-login-page>/faces/login.xhtml</form-login-page>
            <form-error-page>/faces/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>管理者</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>学生</description>
        <role-name>student</role-name>
    </security-role>
    <!-- 文字列の未入力をNULLとして扱う -->
    <context-param>
      <param-name>
        javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL
      </param-name>
      <param-value>true</param-value>
    </context-param>
</web-app>